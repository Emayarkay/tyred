<div class="page-container">
  <h1 class="logo">Tyred</h1>
  <p class="logo_strap_line">Sign Up</p>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :uid, as: :hidden, input_html: { value: resource.uid } %>
      <%= f.input :access_token, as: :hidden, input_html: { value: resource.access_token } %>
      <%= f.input :refresh_token, as: :hidden, input_html: { value: resource.refresh_token } %>
      <%= f.input :provider, as: :hidden, input_html: { value: resource.provider } %>
      <%= f.input :first_name, placeholder: 'First Name', label:false,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name" } %>
      <%= f.input :last_name, placeholder: 'Last Name', label:false,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last_name" } %>
      <%= f.input :email, placeholder: 'Email', label:false,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password, placeholder: 'Password (min 6 characters)', label:false,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, placeholder: 'Confirm Password', label:false,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "custom-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
