<div class="page-container page-login">
  <%= image_tag "bike_tyre.png", class: "logo-img" %>
  <h1 class="logo">Tyred</h1>
  <p class="mt-4"><strong>Get reminders</strong> to look after your bike</p>
  <p><strong>Save money</strong> on repairs</p>
  <p class="logo_strap_line"><strong>Don't lose sleep</strong> over your bike!</p>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, placeholder: 'Email', label:false,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: 'email' } %>
      <%= f.input :password, placeholder: 'Password', label:false,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'custom-btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  <%#= link_to "Sign in with Strava", "https://www.strava.com/oauth/authorize?client_id=#{ENV["STRAVA_CLIENT_ID"]}&redirect_uri=#{redirect_strava_index_url}&response_type=code&approval_prompt=auto&scope=read%2Cread_all%2Cprofile%3Aread_all%2Cactivity%3Aread%2Cactivity%3Aread_all", class: "custom-btn d-inline-block" %>
</div>
